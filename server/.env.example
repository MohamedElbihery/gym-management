# ============================================
# GymForge PRO — Environment Variables Template
# Copy this file to .env and fill in your values
# ============================================

# Server
PORT=5000
NODE_ENV=development

# Database — use DATABASE_URL for hosted (Supabase/Render) or individual vars for local
# DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gymforge_pro
DB_USER=postgres
DB_PASSWORD=postgres

# JWT — CHANGE THESE IN PRODUCTION (use long random strings)
JWT_SECRET=CHANGE_ME_use_a_64_char_random_string
JWT_REFRESH_SECRET=CHANGE_ME_use_another_64_char_random_string
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email (SMTP) — for OTP verification
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@gymforge.pro

# Super Admin — seeded on first migration
SUPER_ADMIN_EMAIL=admin@example.com
SUPER_ADMIN_PASSWORD=change_this_strong_password

# CORS — comma-separated allowed origins
CORS_ORIGIN=http://localhost:8088,http://127.0.0.1:8088

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100
